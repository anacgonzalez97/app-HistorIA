#:kivy 2.3.1
#:import dp kivy.metrics.dp

<IdiomasScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            source: 'imagen/fondo.png'
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: dp(40)
        spacing: dp(20)
        size_hint: 0.9, 0.9
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            id: language_label
            text: ''
            font_size: '22sp'
            bold: True
            color: 1, 1, 1, 1
            size_hint_y: None
            height: dp(40)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: dp(440), dp(133)
            spacing: dp(40)
            pos_hint: {'center_x': 0.75}

            Button:
                id: btn_es
                text: ' '
                size_hint: None, None
                size: dp(140), dp(93)
                background_normal: 'imagen/bandera_es.png'
                background_down: 'imagen/bandera_es.png'
                keep_ratio: False
                allow_stretch: True
                border: (0, 0, 0, 0)
                on_release: root.on_language_selected('Espa√±ol')

            Button:
                id: btn_en
                text: ' '
                size_hint: None, None
                size: dp(140), dp(93)
                background_normal: 'imagen/bandera_en.png'
                background_down: 'imagen/bandera_en.png'
                keep_ratio: False
                allow_stretch: True
                border: (0, 0, 0, 0)
                on_release: root.on_language_selected('English')

        Widget:
            size_hint: 1, 0.2

        Button:
            id: btn_volver
            text: ''
            size_hint: 1, None
            height: dp(50)
            background_color: 0.85, 0.90, 0.95, 0.5
            color: 1, 1, 1, 1
            bold: True
            font_size: '18sp'
            on_release: root.guardar_y_volver()
