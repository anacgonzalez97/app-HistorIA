#:kivy 2.3.1
#:import dp kivy.metrics.dp

<BookStyleLabel>:
    text_size: self.width, None
    size_hint_y: None
    height: self.texture_size[1]
    valign: 'top'
    halign: 'left'
    markup: True
    padding: dp(15), dp(10)
    color: 0, 0, 0, 1

<YearSlider>:
    orientation: 'vertical'
    spacing: dp(5)
    padding: dp(10)
    size_hint_y: None
    height: dp(80)

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        height: dp(30)
        spacing: dp(5)

        Button:
            text: '<'
            size_hint: (None, 1)
            width: dp(40)
            background_color: 0.85, 0.90, 0.95, 0.5
            color: 1, 1, 1, 1
            bold: True
            font_size: '18sp'  # Texto ligeramente más pequeño
            on_press: root.decrease_year()

        Label:
            text: app.translate('year_label').format(year=int(root.value))
            size_hint: (1, 1)
            font_size: '18sp'
            halign: 'center'
            bold: True
            color: 1, 1, 1, 1

        Button:
            text: '>'
            size_hint: (None, 1)
            width: dp(40)
            background_color: 0.85, 0.90, 0.95, 0.5
            color: 1, 1, 1, 1
            bold: True
            font_size: '18sp'  # Texto ligeramente más pequeño
            on_press: root.increase_year()

    Slider:
        id: slider
        min: root.min_year
        max: root.max_year
        value: root.value
        step: 1
        size_hint: (1, None)
        height: dp(40)
        cursor_color: 1, 1, 1, 0  
        cursor_size: dp(25), dp(25)  # Tamaño del thumb


<BackgroundWidget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            texture: root.background_texture
            pos: self.pos
            size: self.size
